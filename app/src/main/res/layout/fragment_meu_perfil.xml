<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.mobi.redemicro.fragment.MeuPerfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/foto_perfil"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/nome_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/email_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/data_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/phone_perfil"
                android:text="@string/hint_dataNascimento"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/data_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/data_titulo"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:id="@+id/linhaData"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/data_titulo"
                android:layout_marginTop="8dp"
                android:background="@color/grey_300" />

            <TextView
                android:id="@+id/ddd_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linhaData"
                android:layout_marginTop="16dp"
                android:text="@string/hint_ddd"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/ddd_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linhaData"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/ddd_titulo"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:id="@+id/linhaDdd"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ddd_titulo"
                android:layout_marginTop="8dp"
                android:background="@color/grey_300" />

            <TextView
                android:id="@+id/telefone_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linhaDdd"
                android:layout_marginTop="16dp"
                android:text="@string/hint_telefone"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/telefone_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linhaDdd"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/telefone_titulo"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:id="@+id/linhaTelefone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/telefone_titulo"
                android:layout_marginTop="8dp"
                android:background="@color/grey_300" />

            <TextView
                android:id="@+id/logradouro_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linhaTelefone"
                android:layout_marginTop="16dp"
                android:text="@string/hint_endereco"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/logradouro_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linhaTelefone"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/logradouro_titulo"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:id="@+id/linhaLogradouro"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/logradouro_titulo"
                android:layout_marginTop="8dp"
                android:background="@color/grey_300" />

            <TextView
                android:id="@+id/numero_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linhaLogradouro"
                android:layout_marginTop="16dp"
                android:text="@string/hint_numero"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/numero_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linhaLogradouro"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/numero_titulo"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:id="@+id/linhaNumero"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/numero_titulo"
                android:layout_marginTop="8dp"
                android:background="@color/grey_300" />

            <TextView
                android:id="@+id/bairro_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linhaNumero"
                android:layout_marginTop="16dp"
                android:text="@string/hint_bairro"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/bairro_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linhaNumero"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/bairro_titulo"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:id="@+id/linhaBairro"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/bairro_titulo"
                android:layout_marginTop="8dp"
                android:background="@color/grey_300" />

            <TextView
                android:id="@+id/cidade_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linhaBairro"
                android:layout_marginTop="16dp"
                android:text="@string/hint_cidade"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/cidade_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linhaBairro"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/cidade_titulo"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:id="@+id/linhaCidade"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/cidade_titulo"
                android:layout_marginTop="8dp"
                android:background="@color/grey_300" />

            <TextView
                android:id="@+id/cep_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linhaCidade"
                android:layout_marginTop="16dp"
                android:text="@string/hint_cep"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/cep_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linhaCidade"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/cep_titulo"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:id="@+id/linhaCep"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/cep_titulo"
                android:layout_marginTop="8dp"
                android:background="@color/grey_300" />

            <TextView
                android:id="@+id/estado_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linhaCep"
                android:layout_marginTop="16dp"
                android:text="@string/hint_estado"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/estado_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linhaCep"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/estado_titulo"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:id="@+id/linhaEstado"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/estado_titulo"
                android:layout_marginTop="8dp"
                android:background="@color/grey_300" />

            <TextView
                android:id="@+id/pais_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linhaEstado"
                android:layout_marginTop="16dp"
                android:text="@string/hint_pais"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/pais_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linhaEstado"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/pais_titulo"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:id="@+id/linhaPais"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/pais_titulo"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@color/grey_300" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
